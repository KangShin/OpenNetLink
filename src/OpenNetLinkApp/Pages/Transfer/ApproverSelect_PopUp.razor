                                    <col width="">
                                    <col width="">
                                    <col width="">
                                    <col width="">
                                </colgroup>
                                <thead>
                                    <tr>
                                        <th>@strOrder </th>        <!--순번-->
                                        <th>@strDept </th>        <!--부서-->
