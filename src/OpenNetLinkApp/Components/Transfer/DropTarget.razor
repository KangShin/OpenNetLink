@using OpenNetLinkApp.Services;
@inject DragAndDropService DragAndDropService

<div ondragover="event.preventDefault()" @ondrop="OnDrop">
    @ChildContent
</div>
@functions {
    [Parameter]
    public RenderFragment ChildContent { get; set; }

    [Parameter]
    public string Zone { get; set; }

    [Parameter]
    public Action<List<DNGFileInfo>> Drop { get; set; }

    void OnDrop()
    {
        List<DNGFileInfo> stList = DragAndDropService.getDataList();
        Drop(stList);
        DragAndDropService.clearDataList();
    }
}
